@model UrbanJunction.Web.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-dark text-white">
    <div class="card shadow-lg p-4 bg-secondary text-white" style="width: 400px;">
        <h3 class="text-center mb-4 fw-bold">Welcome Back 👋</h3>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
            </div>

            <button type="submit" class="btn btn-info w-100 fw-bold">Login</button>
        </form>

        <hr class="border-light my-4">

        <div class="text-center">
            <p class="mb-1">Don’t have an account?</p>
            <a asp-action="Register" class="btn btn-outline-light w-100">Sign Up</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
