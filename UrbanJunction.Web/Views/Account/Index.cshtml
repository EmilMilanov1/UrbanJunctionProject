@{
    ViewData["Title"] = "Account Overview";
}

<div class="container mt-5 text-center">
    <h3>Welcome back, @User.Identity?.Name!</h3>
    <p class="text-muted">Manage your account and posts here.</p>

    <div class="d-flex justify-content-center gap-3 mt-4">
        <a asp-action="Profile" class="btn btn-outline-info">My Profile</a>
        <a asp-controller="Posts" asp-action="MyPosts" class="btn btn-outline-success">My Posts</a>
    </div>
</div>
