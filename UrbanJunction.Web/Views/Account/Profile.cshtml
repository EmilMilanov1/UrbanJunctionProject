@model ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 text-center" style="max-width: 500px; margin: auto;">
        <img src="@(!string.IsNullOrEmpty(Model.ProfilePictureUrl) ? Model.ProfilePictureUrl : Url.Content("~/images/default.jpg"))"
             alt="Profile Picture"
             class="rounded-circle mb-3"
             style="width: 120px; height: 120px; object-fit: cover;">

        <h3>@Model.Username</h3>
        <p class="text-muted">@Model.Email</p>

        <a asp-action="EditProfile" class="btn btn-outline-primary btn-sm mt-2">Edit Profile</a>
    </div>
</div>
