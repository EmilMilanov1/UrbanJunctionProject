@model IEnumerable<UrbanJunction.Data.Models.Post>

@{
    ViewData["Title"] = "My Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-end mb-4">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a asp-controller="Posts" asp-action="Create" class="btn btn-info">+ New Post</a>
    }
    else
    {
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light">+ New Post</a>
    }
</div>

<div class="container mt-5">
    <h2 class="text-center mb-5 text-white display-6">My Posts</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm py-4">
            You haven't posted anything yet.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var post in Model)
            {
                <div class="col">
                    <div class="card h-100 bg-dark text-light border-0 shadow-lg rounded-3 overflow-hidden">

                        @if (!string.IsNullOrEmpty(post.ImagePath))
                        {
                            <img src="@post.ImagePath"
                                 alt="Post Image"
                                 class="card-img-top"
                                 style="object-fit: cover; height: 220px;">
                        }

                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title fw-bold text-info">@post.Title</h5>

                                <p class="card-text text-secondary">
                                    @(post.Content?.Length > 150
                                        ? post.Content.Substring(0, 150) + "..."
                                        : post.Content)
                                </p>
                            </div>

                            <div class="mt-3">
                                <p class="card-text mb-2">
                                    <small class="text-muted">
                                        In <strong>@post.Subcategory?.Topic?.Name / @post.Subcategory?.Name</strong> •
                                        @post.CreatedOn.ToShortDateString()
                                    </small>
                                </p>

                                <div class="d-flex justify-content-between">
                                    <a asp-action="Details"
                                       asp-controller="Posts"
                                       asp-route-id="@post.Id"
                                       class="btn btn-outline-info btn-sm w-100 me-2">
                                        View
                                    </a>

                                    <a asp-action="Edit"
                                       asp-controller="Posts"
                                       asp-route-id="@post.Id"
                                       class="btn btn-outline-warning btn-sm w-100 me-2">
                                        Edit
                                    </a>

                                    <form asp-action="Delete"
                                          asp-controller="Posts"
                                          asp-route-id="@post.Id"
                                          method="post"
                                          class="d-inline w-100">
                                        <button type="submit"
                                                class="btn btn-outline-danger btn-sm w-100"
                                                onclick="return confirm('Are you sure you want to delete this post?')">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
