@{
    ViewData["Title"] = "Urban Junction";
}

<div class="container text-center mt-5">
    <h1 class="fw-bold mb-5">URBAN JUNCTION</h1>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <a asp-controller="Topics" asp-action="ByName" asp-route-name="Art" class="text-decoration-none">
                <div class="card bg-dark text-white">
                    <img src="~/images/art.jpg" class="card-img" alt="Art" style="object-fit: cover; height: 450px;">
                    <div class="card-img-overlay d-flex align-items-end justify-content-center">
                        <h2 class="fw-bold text-uppercase text-wrap">Art</h2>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4 mb-4">
            <a asp-controller="Topics" asp-action="ByName" asp-route-name="Music" class="text-decoration-none">
                <div class="card bg-dark text-white border-0">
                    <img src="~/images/music.jpg" class="card-img" alt="Music" style="object-fit: cover; height: 450px;">
                    <div class="card-img-overlay d-flex align-items-end justify-content-center">
                        <h2 class="fw-bold text-uppercase">Music</h2>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4 mb-4">
            <a asp-controller="Topics" asp-action="ByName" asp-route-name="Fashion" class="text-decoration-none">
                <div class="card bg-dark text-white border-0">
                    <img src="~/images/fashion.jpg" class="card-img" alt="Fashion" style="object-fit: cover; height: 450px;">
                    <div class="card-img-overlay d-flex align-items-end justify-content-center">
                        <h2 class="fw-bold text-uppercase">Fashion</h2>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
