@model IEnumerable<UrbanJunction.Data.Models.Post>

@{
    ViewData["Title"] = ViewBag.TopicName;
}

<div class="d-flex justify-content-end mb-4">
    @if (User.Identity?.IsAuthenticated ?? false)

    {
            <a asp-controller="Posts" asp-action="Create" class="btn btn-info">+ New Post</a>
    }

    else

    {
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light">+ New Post</a>
    }
</div>

<div class="container mt-5">
    <h2 class="text-center mb-5 text-white display-6">
        @ViewBag.TopicName Posts
    </h2>

    @if (!Model.Any())

    {
            <div class="alert alert-info text-center shadow-sm py-4">
                No posts available in this topic yet.
            </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var post in Model)

        {
                <div class="col">
                    <div class="card h-100 bg-dark text-light border-0 shadow-lg rounded-3 overflow-hidden">
                
                @* ✅ Display image only if available *@
                        @if (post.Images != null && post.Images.Any())

                        {

                            string carouselId = $"carousel_{post.Id}";

                <div id="@carouselId" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                                    @for (int i = 0; i < post.Images.Count; i++)

                                    {

                                        var image = post.Images.ElementAt(i);
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@image.ImagePath" class="d-block w-100 rounded"
                                         style="object-fit: cover; height: 220px;" alt="Post Image">
                                </div>
                                    }
                    </div>

                                @if (post.Images.Count > 1)

                                {
                            <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                                }
                </div>
                        }

                
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title fw-bold text-info">@post.Title</h5>
                
                                <p class="card-text text-secondary">
                            @(post.Content?.Length > 150
                                    ? post.Content.Substring(0, 150) + "..."
                                    : post.Content)
                                </p>
                            </div>
                
                            <div class="mt-3">
                                <p class="card-text mb-2">
                                    <small class="text-muted">
                                        Posted on @post.CreatedOn.ToShortDateString()
                                    </small>
                                </p>
                
                                <a asp-controller="Posts"
                                   asp-action="Details"
                                   asp-route-id="@post.Id"
                                   class="btn btn-outline-info w-100">
                                    View Post
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
        }
            </div>
    }
</div>
